generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Trade {
    tradeID                 Int         @id @default(autoincrement())
    sellerID                String
    units                   Int
    from                    Currency
    to                      Currency
    currencyWhichIsOne      FromOrTo
    amountPerUnit           Int
    seller                  Token       @relation(fields: [sellerID], references: [userID])
    buyers                  Purchase[]
    status                  TradeStatus
    incompleteTransactionID Int?        @unique
    unitsRemaining          Int
    completedAt             DateTime?
}

model Token {
    userID       String     @id
    value        String     @unique @default(uuid())
    isAdminToken Boolean
    isBotToken   Boolean
    offers       Trade[]
    purchases    Purchase[]
}

model Purchase {
    purchaseID    Int    @id @default(autoincrement())
    buyerID       String
    partOfTradeID Int
    buyerToken    Token  @relation(fields: [buyerID], references: [userID])
    trade         Trade  @relation(fields: [partOfTradeID], references: [tradeID])
}

model Secret {
    owner String @unique
    value String @default(uuid())
}

enum TradeStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
}

enum Currency {
    HN
    GP
}

enum FromOrTo {
    FROM
    TO
}
